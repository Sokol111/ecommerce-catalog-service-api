                    {
                      "name": "name",
                      "type": "string",
                      "doc": "Option display name"
                    },
                    {
                      "name": "slug",
                      "type": "string",
                      "doc": "Option URL-friendly identifier"
                    },
                    {
                      "name": "color_code",
                      "type": ["null", "string"],
                      "default": null,
